unit TestuntFunctionTarefas2;
{

  Delphi DUnit Test Case
  ----------------------
  This unit contains a skeleton test case class generated by the Test Case Wizard.
  Modify the generated code to correctly setup and call the methods from the unit 
  being tested.

}

interface

uses
  TestFramework, Vcl.ComCtrls, untFunctionTarefas2, untProcessoThread;

type
  // Test methods for class TExecutarThread

  TestTExecutarThread = class(TTestCase)
  strict private
    FExecutarThread: TExecutarThread;
  public
    procedure SetUp; override;
    procedure TearDown; override;
  published
    procedure TestExecutar;
  end;

implementation

procedure TestTExecutarThread.SetUp;
begin
  FExecutarThread := TExecutarThread.Create;
end;

procedure TestTExecutarThread.TearDown;
begin
  FExecutarThread.Free;
  FExecutarThread := nil;
end;

procedure TestTExecutarThread.TestExecutar;
var progressBar : TProgressBar;
begin
  progressBar := TProgressBar.Create(nil);
  try
     FExecutarThread.fMiliSegundos := 1;
     FExecutarThread.fpThread := progressBar;
     // TODO: Validate method results
     CheckException(FExecutarThread.Executar,nil,'Ocorreu um erro na Rotina FExecutarThread.Executar');
  finally
    progressBar := Nil;
  end;
end;

initialization
  // Register any test cases with the test runner
  RegisterTest(TestTExecutarThread.Suite);
end.

